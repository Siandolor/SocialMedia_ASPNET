@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    // ----------------------------------------------------------
    //  VIEW CONFIGURATION
    //  Optional variable for logo size (can be reused in inline CSS)
    // ----------------------------------------------------------
    var logoSize = "75px";
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialMedia</title>

    <!-- ------------------------------------------------------
         STYLESHEETS
         Includes Bootstrap, site-wide CSS, and project-specific styles.
         "asp-append-version" adds cache-busting query strings.
         ------------------------------------------------------ -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChirpApp.styles.css" asp-append-version="true" />
</head>

<body>
<!-- ======================================================
     HEADER & NAVIGATION
     Displays site navigation bar and authentication controls.
     ------------------------------------------------------ -->
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <!-- Brand / Logo -->
            <a class="navbar-brand logo-icon border border-primary rounded-2 d-flex justify-content-center align-items-center"
               asp-controller="Home" asp-action="Index">
                <span class="logo-glyph">&lt;</span>
            </a>

            <!-- Mobile Menu Toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation Links -->
            <div class="collapse navbar-collapse" id="navbarContent">
                <!-- Left-aligned nav items -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Tweeble</a>
                    </li>
                </ul>

                <!-- Right-aligned user/account actions -->
                <ul class="navbar-nav ms-auto align-items-center">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <!-- Logged-in user info -->
                        <li class="nav-item">
                            <span class="nav-link">Hello @User.Identity?.Name!</span>
                        </li>

                        <!-- Logout button -->
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" asp-antiforgery="true" class="m-0 p-0">
                                <button type="submit" class="nav-link btn btn-link m-0 p-0">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <!-- Register / Login links -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- ======================================================
     MAIN CONTENT CONTAINER
     Renders the page-specific view content inside the layout.
     ------------------------------------------------------ -->
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<!-- ======================================================
     FOOTER
     Displays project name, symbol, and year.
     Responsive and centered using Bootstrap utilities.
     ------------------------------------------------------ -->
<footer class="border-top footer text-muted">
    <div class="container d-flex justify-content-center align-items-center">
        <p class="m-0" style="display:flex; align-items:center; font-size:20px; line-height:1;">
            &copy; @DateTime.Now.Year&nbsp;- Tweeble
            <span style="font-size:25px; line-height:20px; margin:0 4px; display:inline-block; color: blue !important;">
                    &lt;
                </span>&trade;
            SocialMedia
        </p>
    </div>
</footer>

<!-- ======================================================
     JAVASCRIPT DEPENDENCIES
     Loads core scripts for interactivity and validation.
     ------------------------------------------------------ -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<!-- Section for view-specific scripts -->
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
